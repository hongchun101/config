set nu
set relativenumber
set incsearch
set ignorecase
set smartcase
set autoread
set cursorline
set magic
set clipboard+=unnamed
set scrolloff=1
set syntax=on
set ruler
set noeb
"set notimeout
set timeoutlen=5000
set which-key
"set sneak

set ideajoin
let g:argtextobj_pairs="[:],(:),<:>"

let g:which_key_timeout = 1000   " 设置延迟展示时间（以毫秒为单位）

let mapleader=" "
let g:WhichKey_FontSize = 22
let g:qs_primary_color = '#5cff26'
let g:qs_secondary_color = '#4d7fff'
